# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.{ts, tsx}]
quote_type = single
ij_typescript_use_double_quotes = false

[*.json]
quote_type = double
ij_json_use_single_quotes = false

[*.md]
max_line_length = off
trim_trailing_whitespace = false